{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "biome:lint": "bun biome lint apps && bun biome lint packages",
    "bump": "bunx npm-check-updates -u --deep -p bun && bun i && bun update"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/bun": "1.2.20",
    "@types/jest": "30.0.0",
    "@types/lodash": "4.17.20",
    "@types/node": "24.2.1",
    "@types/uuid": "10.0.0",
    "eslint": "9.33.0",
    "eslint-plugin-deprecation": "3.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-promise": "7.2.1",
    "jest": "30.0.5",
    "knip": "5.62.0",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "turbo": "2.5.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.1"
  },
  "engines": {
    "node": "22.10.0"
  },
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@biomejs/biome",
    "@nestjs/core"
  ]
}
