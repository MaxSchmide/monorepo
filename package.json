{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "biome:lint": "bun biome lint apps && bun biome lint packages",
    "bump": "bunx npm-check-updates -u --deep -p bun && bun i && bun update"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "uuid": "11.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.1.13",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.13",
    "@types/node": "22.9.1",
    "@types/uuid": "10.0.0",
    "eslint": "9.15.0",
    "eslint-plugin-deprecation": "3.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-promise": "7.1.0",
    "jest": "29.7.0",
    "knip": "5.37.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "turbo": "2.3.0",
    "typescript": "5.6.3",
    "typescript-eslint": "8.15.0"
  },
  "engines": {
    "node": "22.10.0"
  },
  "packageManager": "bun@1.1.36",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@biomejs/biome",
    "@nestjs/core"
  ]
}
