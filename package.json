{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "biome:lint": "bun biome lint apps && bun biome lint packages",
    "bump": "bunx npm-check-updates -u --deep -p bun -x eslint && bun i && bun update",
    "prepare": "husky"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bun": "1.1.6",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.17.6",
    "@types/node": "20.14.9",
    "@types/uuid": "10.0.0",
    "eslint": "8.57.0",
    "eslint-plugin-deprecation": "3.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-promise": "6.4.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "knip": "5.24.1",
    "ts-jest": "29.1.5",
    "ts-node": "10.9.2",
    "turbo": "2.0.6",
    "typescript": "5.5.3",
    "@typescript-eslint/parser": "7.15.0",
    "@typescript-eslint/eslint-plugin": "7.15.0"
  },
  "engines": {
    "node": "20.15.0"
  },
  "packageManager": "bun@1.1.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
