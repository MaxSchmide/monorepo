{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "biome:lint": "bun biome lint apps && bun biome lint packages",
    "bump": "bunx npm-check-updates -u --deep -p bun -x eslint && bun i && bun update",
    "prepare": "husky"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bun": "1.1.8",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.17.7",
    "@types/node": "22.5.0",
    "@types/uuid": "10.0.0",
    "eslint": "8.57.0",
    "eslint-plugin-deprecation": "3.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-promise": "7.1.0",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "knip": "5.27.4",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "turbo": "2.0.14",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": "20.15.0"
  },
  "packageManager": "bun@1.1.26",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@biomejs/biome",
    "@nestjs/core"
  ]
}
